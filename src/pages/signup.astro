---
import { getSiteMetadata } from '@/consts';
import { getLangFromUrl } from '@/i18n';

import { Background } from '@/components/background';
import SignupSection from '@/components/blocks/signup-section';
import DefaultLayout from '@/layouts/DefaultLayout.astro';

const lang = getLangFromUrl(Astro.url);
const metadata = getSiteMetadata(lang);
---

<DefaultLayout title={metadata.title.default} description={metadata.description} lang={lang}>
  <Background>
    <SignupSection lang={lang} />
  </Background>
</DefaultLayout>
