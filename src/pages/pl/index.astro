---
import { getSiteMetadata } from '@/consts';

import { Background } from '@/components/background';
import { FAQ } from '@/components/blocks/faq';
import { Features } from '@/components/blocks/features';
import { Hero } from '@/components/blocks/hero';
import { Logos } from '@/components/blocks/logos';
import { Pricing } from '@/components/blocks/pricing';
import { ResourceAllocation } from '@/components/blocks/resource-allocation';
import { Testimonials } from '@/components/blocks/testimonials';
import DefaultLayout from '@/layouts/DefaultLayout.astro';

const lang = 'pl' as const;
const metadata = getSiteMetadata(lang);
---

<DefaultLayout title={metadata.title.default} description={metadata.description} lang={lang}>
  <Background className="via-muted to-muted/80">
    <Hero lang={lang} />
    <Logos client:only="react" lang={lang} />
    <Features lang={lang} />
    <ResourceAllocation lang={lang} />
  </Background>
  <Testimonials client:only='react' lang={lang} />
  <Background variant="bottom">
    <Pricing client:only='react' lang={lang} />
    <FAQ client:only='react' lang={lang} />
  </Background>
</DefaultLayout>
