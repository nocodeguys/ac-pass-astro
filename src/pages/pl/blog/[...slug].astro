---
import { type CollectionEntry, getCollection } from 'astro:content';
import { render } from 'astro:content';

import { BlogPost } from '@/components/blocks/blog-post';
import { getSiteMetadata } from '@/consts';
import DefaultLayout from '@/layouts/DefaultLayout.astro';

export async function getStaticPaths() {
	const posts = (await getCollection('blog'))
		.filter((post) => post.data.lang === 'pl');
	return posts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}
type Props = CollectionEntry<'blog'>;

const lang = 'pl' as const;
const metadata = getSiteMetadata(lang);

const post = Astro.props;
const { title, description, pubDate, updatedDate, heroImage } = post.data;
const { Content } = await render(post);
---
<DefaultLayout title={title} description={description} lang={lang}>
	<div class="py-28 lg:pt-44 lg:pb-32">
		<BlogPost post={post} lang={lang} client:only='react'>
			<Content />
		</BlogPost>
	</div>
</DefaultLayout>
